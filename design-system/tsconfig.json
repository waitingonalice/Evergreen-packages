{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "lib": ["es6", "DOM", "es2016", "es2017"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "build",
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    // "typeRoots": ["./node_modules/@types"]
    "types": ["node"]
  },
  "exclude": [
    "node_modules",
    "build",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx",
    "src/utils/storybook"
  ],
  "include": ["src/**/*"]
}
